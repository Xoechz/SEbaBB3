    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Run",
            "type": "f5anything",
            "request": "launch",
            "command": "cd ${fileDirname}/bin && ./${fileBasenameNoExtension}",
            "terminalName": "C++ Execution",
            "terminalIndex": -1,
            "showTerminal": true,
            "preLaunchTask": "G++ Build"
        },
        {
            "name": "C Run",
            "type": "f5anything",
            "request": "launch",
            "command": "cd ${fileDirname}/bin && ./${fileBasenameNoExtension}",
            "terminalName": "C Execution",
            "terminalIndex": -1,
            "showTerminal": true,
            "preLaunchTask": "GCC Build"
        },
        {
            "name": "C++ Debug Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/bin/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/run/current-system/sw/bin/gdb",
            "preLaunchTask": "G++ Build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "C Debug Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/bin/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/run/current-system/sw/bin/gdb",
            "preLaunchTask": "GCC Build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}