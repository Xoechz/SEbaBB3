{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Run",
            "type": "f5anything",
            "request": "launch",
            "command": "${fileDirname}/bin/${fileBasenameNoExtension}",
            "terminalName": "C++ Execution",
            "terminalIndex": -1,
            "showTerminal": true,
            "preLaunchTask": "G++ Build"
        },
        {
            "name": "C Run",
            "type": "f5anything",
            "request": "launch",
            "command": "${fileDirname}/bin/${fileBasenameNoExtension}",
